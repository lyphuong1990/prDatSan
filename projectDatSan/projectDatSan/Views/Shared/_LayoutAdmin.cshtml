<!DOCTYPE html>
<html>
<head>
    <title>@Page.Title</title>

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/admin/style.css")
    @Scripts.Render("~/bundles/modernizr")

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.5 -->
    @Styles.Render("~/adminlte/bootstrap/css/bootstrap.min.css")
    <!-- Font Awesome -->
    @Styles.Render("~/adminlte/dist/css/font-awesome.min.css")
    
    <!-- Ionicons -->
    @Styles.Render("~/adminlte/dist/css/ionicons.min.css")
    <!-- Theme style -->
    @Styles.Render("~/adminlte/dist/css/AdminLTE.min.css")
    @Styles.Render("~/adminlte/dist/css/admin.css")
    <!-- AdminLTE Skins. Choose a skin from the css/skins
         folder instead of downloading all of them to reduce the load. -->
    @Styles.Render("~/adminlte/dist/css/skins/_all-skins.min.css")

    <!-- Date Time Picker -->
    @Styles.Render("~/adminlte/plugins/datetimepicker/bootstrap-datetimepicker.min.css")

    @Styles.Render("~/adminlte/plugins/jQueryUI/jquery-ui.css")
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- jQuery 2.1.4 -->
    @Scripts.Render("~/adminlte/plugins/jQuery/jQuery-2.1.4.min.js")
    <!-- jQuery UI 1.11.4 -->
    @Scripts.Render("~/adminlte/plugins/jQueryUI/jquery-ui.min.js")
    <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->

    <script>
        $.widget.bridge('uibutton', $.ui.button);
    </script>
    <!-- Bootstrap 3.3.5 -->
    @Scripts.Render("~/adminlte/bootstrap/js/bootstrap.min.js")
    <!-- datetimepicker -->
    @Scripts.Render("~/adminlte/plugins/datetimepicker/bootstrap-datetimepicker.min.js")
    <!-- FastClick -->
    @Scripts.Render("~/adminlte/plugins/fastclick/fastclick.js")
    <!-- AdminLTE App -->
    @Scripts.Render("~/adminlte/dist/js/app.min.js")

    <script>
        $(function () {
            $('#start_date').datetimepicker({
                format: "yyyy-mm-dd hh:ii:00",
                todayBtn: 1,
                autoclose: 1,
                todayHighlight: 1,
                startView: 2,
                forceParse: 0,
            });
            $('#end_date').datetimepicker({
                format: "yyyy-mm-dd hh:ii:00",
                todayBtn: 1,
                autoclose: 1,
                todayHighlight: 1,
                startView: 2,
                forceParse: 0,
            });
            $('#start_update_date').datetimepicker({
                format: "yyyy-mm-dd hh:ii:00",
                todayBtn: 1,
                autoclose: 1,
                todayHighlight: 1,
                startView: 2,
                forceParse: 0,
            });
            $('#end_update_date').datetimepicker({
                format: "yyyy-mm-dd hh:ii:00",
                todayBtn: 1,
                autoclose: 1,
                todayHighlight: 1,
                startView: 2,
                forceParse: 0,
            });

            $('#datepickerStartdate').datepicker({
                dateFormat: 'yy-mm-dd',
            });
            $('#datepickerEnddate').datepicker({
                dateFormat: 'yy-mm-dd',
            });
        });
    </script>


</head>
<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
        @RenderPage("~/Views/Shared/admin/_Navbar.cshtml")
        @RenderPage("~/Views/Shared/admin/_sidebar.cshtml")
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content">

                @RenderBody()
            </section>
        </div>
        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Version</b> 1.0.0
            </div>
            <strong>Copyright &copy; 2015</strong>
        </footer>
       
       
    </div>
</body>
</html>
